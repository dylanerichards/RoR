<h1>New Topic </h1>

<br>

<%= form_for @topic do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "Content" %>
    <%= f.text_area :content, rows: "20", class: "form-control" %>
  </div>

  <%= f.submit %>
<% end %>
