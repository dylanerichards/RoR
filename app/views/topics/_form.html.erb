<%= form_for @topic do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "Content" %>
    <%= f.text_area :content, class: 'wysihtml5' %>
  </div>

  <%= f.submit nil, class: "btn btn-primary" %>
<% end %>